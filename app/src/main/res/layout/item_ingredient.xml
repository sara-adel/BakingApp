<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/card_margin">

        <TextView
            android:layout_marginTop="@dimen/ingredients_margin"
            android:layout_marginBottom="@dimen/ingredients_margin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="@dimen/ingredients_margin"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="start"
            android:id="@+id/item_ingredient_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="title" />

        <TextView
            android:layout_marginStart="@dimen/ingredients_margin_start"
            android:id="@+id/item_ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/ingredients_margin"
            android:padding="@dimen/ingredients_margin"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:text="Quantity"
            android:textStyle="italic"/>

    </LinearLayout>
</android.support.v7.widget.CardView>